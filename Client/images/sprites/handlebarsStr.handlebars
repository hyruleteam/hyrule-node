{{#extend "scss"}}
    {{#content "sprites"}}
        {{#each sprites}}
            @mixin {{prefix}}-{{name}} {
            background-position: 0 {{offset_y}}/({{height}}-{{total_height}})*100%;
            }

        {{/each}}
    {{/content}}
    {{#content "spritesheet"}}
        .{{spritesheet.name}} {
        background-image: url('{{{spritesheet.escaped_image}}}');
        background-repeat: no-repeat;
        background-size: rem({{spritesheet.width}}) rem({{spritesheet.height}});
        }
    {{/content}}
{{/extend}}